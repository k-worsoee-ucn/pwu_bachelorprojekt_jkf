# Make a .env file in the root directory, by copying this example and filling in the values

# Database Configuration
POSTGRES_DB=sales_process
POSTGRES_USER=postgres
POSTGRES_PASSWORD=your_secure_password_here
DB_HOST=database
DB_PORT=5432

# Database Connection URL (for Prisma)
DATABASE_URL=postgresql://postgres:your_secure_password_here@database:5432/sales_process

# Application Ports
BACKEND_PORT=3000
FRONTEND_PORT=5173

# Environment
NODE_ENV=development

# Security
JWT_SECRET=your_jwt_secret_here

# Registration Security
REGISTRATION_ACCESS_CODE=your_access_code_here

# Seed Data
SEED_PASSWORD=your_seed_password_here

# CORS
CORS_ORIGIN=http://localhost:5173
